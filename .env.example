# Server Configuration
PORT=3001
NODE_ENV=development
USE_HTTPS=true

# CORS Origins (comma-separated)
CORS_ORIGINS=https://localhost:5173,https://127.0.0.1:5173

# SSL Certificate Paths (optional, defaults to .certs/ in project root)
# SSL_CERT_PATH=./.certs/localhost+3.pem
# SSL_KEY_PATH=./.certs/localhost+3-key.pem

# Database Type: 'sqlite' or 'postgres'
DB_TYPE=postgres

# SQLite Configuration (used when DB_TYPE=sqlite)
DB_PATH=./data/pantry.db

# PostgreSQL Configuration (used when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pantry_pal
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# Optional: Use DATABASE_URL instead of individual DB_* vars
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pantry_pal

# Authentication (Clerk)
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret_here

# Pricing (Stripe Price IDs)
STRIPE_PRICE_PRO_MONTHLY=price_test_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_test_pro_yearly

# Feature Flags / Usage Limits
FREE_TIER_RECEIPT_SCANS=10
FREE_TIER_AI_CALLS=50
FREE_TIER_VOICE_SESSIONS=5

PRO_TIER_RECEIPT_SCANS=100
PRO_TIER_AI_CALLS=500
PRO_TIER_VOICE_SESSIONS=50

# Seed User ID (for development)
SEED_USER_ID=seed_user_test_123

