{
  "name": "pantry-tracker-api",
  "version": "1.0.0",
  "description": "A production-ready pantry tracking backend API with receipt scanning and visual usage detection",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node src/db/seed.ts",
    "db:migrate": "ts-node src/db/migrate.ts",
    "db:init": "npm run db:migrate && npm run seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pantry",
    "inventory",
    "tracking",
    "api",
    "receipt-scanning"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@types/stripe": "^8.0.416",
    "better-sqlite3": "11.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "stripe": "^20.3.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
